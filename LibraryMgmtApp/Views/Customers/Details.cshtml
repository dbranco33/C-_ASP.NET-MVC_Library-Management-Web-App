@model LibraryMgmtApp.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li><strong>Membership Type: </strong>@Model.MembershipType.Name</li>
    @if (Model.BirthDate.HasValue)
    {
        <li><strong>Birthdate: </strong>@Model.BirthDate.Value.ToLongDateString()</li>
    }
</ul>

